<Window x:Class="FunWithXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunWithXML"
        mc:Ignorable="d"
        Title="XML testing application" Height="450" Width="800">
    <Window.Icon>
        <BitmapImage UriSource="file:///V:/projects/pictures/ico/4.ico"/>
    </Window.Icon>
    <Grid>
        <RichTextBox x:Name="info" Margin="10,10,10,35" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Run" Margin="0,0,10,10" Click="Button_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</Window>
